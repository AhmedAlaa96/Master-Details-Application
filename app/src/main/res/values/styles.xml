    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/vodafone_rg</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">@dimen/size_8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/box_color</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="hintTextColor">@color/black</item>

    </style>

    <style name="primaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/buttonShape</item>
        <item name="android:backgroundTint">@color/primary_button</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">600</item>
        <item name="lineSpacing">-0.02dp</item>
        <item name="fontFamily">@font/vodafone_rg</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:inputType">text</item>
        <item name="iconTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="android:radius">0dp</item>
    </style>


    <style name="buttonShape" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/size_8dp</item>
    </style>

    <style name="outlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="shapeAppearance">@style/buttonShape</item>
        <item name="android:backgroundTint">@color/outlined_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@null</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">600</item>
        <item name="fontFamily">@font/vodafone_rg</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="dragDirection">dragUp</item>
        <item name="textInputStyle">@style/textInputLayout</item>
    </style>

</resources>